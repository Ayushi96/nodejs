<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Once you have added the middleware to make your folder containing the css files accessible, you can directly give the filename of your css file like below -->
    <!-- <link rel="stylesheet" href="home.css" /> -->
    <!-- when using tailwind css -->
    <link rel="stylesheet" href="/output.css" />
    <title>Home Page</title>
</head>

<body>
    <%- include('../partials/navigation') %>
        <div class="bg-white p-4 border-b border-gray-300 shadow-sm">
            <header class="flex justify-center">
                <h1 class="text-2xl font-bold m-4 text-red-500">
                    <%= pageTitle %>
                </h1>
            </header>
            <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4">
                <% registeredHomes.forEach(home=> { %>
                    <li
                        class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-300 w-full max-w-sm">
                        <img src="https://as2.ftcdn.net/jpg/04/37/54/23/1000_F_437542364_rUKRUDlOQ2ZmVrsijNFUfrhxZO7jyOFg.jpg"
                            alt="<%= home.houseName %>" class="w-full h-48 object-cover">
                        <div class="p-4">
                            <h3 class="text-xl font-semibold text-gray-800 mb-2">
                                <%= home.houseName %>
                            </h3>
                            <p class="text-gray-600 mb-2"><i class="fas fa-map-marker-alt mr-2"></i>
                                <%= home.location %>
                            </p>
                            <div class="flex justify-between items-center mb-2">
                                <span class="text-lg font-bold text-red-500">Rs. <%= home.price %> / night</span>
                                <div class="flex items-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                                        class="w-5 h-5 text-yellow-400 mr-1">
                                        <path fill-rule="evenodd"
                                            d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z"
                                            clip-rule="evenodd" />
                                    </svg>
                                    <span class="text-gray-700">
                                        <%= home.rating %>
                                    </span>
                                </div>
                            </div>
                            <button type="text" class="bg-green-500 p-1 rounded-sm w-20">Book</button>
                        </div>
                    </li>
        <% }) %>

            </ul>
            </header>
            </div>



</body>

</html>